{
  "name": "open-mercato",
  "version": "0.3.13",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "modules:entities": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate entities",
    "modules:di": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate di",
    "modules:ids": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate entity-ids",
    "client:generate": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate api-client",
    "modules:prepare": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate",
    "dev": "tsx scripts/start.ts dev",
    "dev:app": "next dev",
    "predev": "npm run modules:prepare",
    "build": "yarn modules:prepare && next build --turbopack",
    "build:packages": "tsc -p packages/core/tsconfig.build.json && tsc -p packages/example/tsconfig.build.json && tsc -p packages/cli/tsconfig.build.json && tsc -p packages/onboarding/tsconfig.build.json",
    "start": "NODE_OPTIONS='-r newrelic' tsx scripts/start.ts start",
    "start:app": "NODE_OPTIONS='-r newrelic' next start",
    "start:workers": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts queue worker --all",
    "lint": "eslint",
    "modules:generate": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate registry",
    "prebuild": "npm run modules:prepare",
    "db:generate": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts db generate",
    "db:migrate": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate && tsx --tsconfig tsconfig.cli.json mercato-cli.ts db migrate && tsx --tsconfig tsconfig.cli.json mercato-cli.ts entities install --global",
    "db:greenfield": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts db greenfield",
    "db:entities:install": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts generate && tsx --tsconfig tsconfig.cli.json mercato-cli.ts entities install",
    "init": "tsx packages/cli/src/bin.ts init",
    "mercato": "tsx --tsconfig tsconfig.cli.json mercato-cli.ts",
    "typecheck": "bash scripts/typecheck.sh",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "docs:dev": "npm run --prefix docs dev"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.80",
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/migrations": "^6.6.2",
    "@mikro-orm/postgresql": "^6.6.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.20.5",
    "@uiw/react-markdown-preview": "^5.1.5",
    "@uiw/react-md-editor": "^4.0.11",
    "@xyflow/react": "^12.10.0",
    "ai": "^5.0.108",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.556.0",
    "newrelic": "^13.7.0",
    "next": "16.0.10",
    "pdf2pic": "^3.2.0",
    "pg": "^8.16.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-email": "^5.0.6",
    "remark-gfm": "^4.0.1",
    "resend": "^6.5.2",
    "semver": "^7.7.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "openapi-typescript": "^7.10.1",
    "semantic-release": "^25.0.2",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.6",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "verifyReleaseCmd": "echo ${nextRelease.version} > .VERSION"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "optionalDependencies": {
    "better-sqlite3": "^12.5.0",
    "bullmq": "^5.34.8",
    "ioredis": "^5.8.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
